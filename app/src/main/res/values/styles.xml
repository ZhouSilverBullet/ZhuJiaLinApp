<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/app_button_style</item>
        <item name="android:textViewStyle">@style/app_text_style</item>
        <item name="editTextStyle">@style/app_edit_style</item>
        <item name="android:checkboxStyle">@style/app_check_box</item>

        <item name="android:windowBackground">@color/color_EFEFF4</item>
    </style>

    <style name="AppWhiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/app_button_style</item>
        <item name="android:textViewStyle">@style/app_text_style</item>
        <item name="editTextStyle">@style/app_edit_style</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoTitleWhiteTheme" parent="AppWhiteTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="app_button_style" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/abc_btn_colored_material</item>
    </style>

    <style name="app_button_style_30" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/abc_btn_colored_material_30</item>
    </style>

    <!--   这个是普通是color_333333 点击 primary_color_press  -->
    <style name="app_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_color</item>
    </style>

    <!--   这个是普通是primary_color 点击 primary_color_press  -->
    <style name="app_text_style2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_primary_color</item>
    </style>

    <style name="app_edit_style" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:textColorHint">@color/color_666666</item>
        <item name="colorControlNormal">@color/color_CCCCCC</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>

    <style name="app_check_box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radiobtn_checked_style</item>
    </style>


    <style name="overAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#001aff</item>
    </style>

    <style name="errorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionsheet_red</item>
    </style>


    <style name="picker_dialog" parent="dialog_style">
        <item name="android:textViewStyle">@style/app_text_style2</item>
    </style>


</resources>
