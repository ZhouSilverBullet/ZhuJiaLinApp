<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="vm"
            type="com.sdxxtop.zjlguardian.ui.gridmanagement.viewmodel.GridManageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EFEFF4"
        tools:context=".ui.gridmanagement.fragment.GridManageFragment">

        <com.youth.banner.Banner
            android:id="@+id/b_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="194dp" />

        <com.sdxxtop.ui.TitleView
            android:id="@+id/stv_title"
            app:titleValue="数字岸堤"
            app:bgColor="@color/translate"
            app:rightImgSrc="@drawable/home_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_notice"
            app:layout_constraintTop_toBottomOf="@id/b_view"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_height="45dp">

            <TextView
                android:text="最新"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="消息"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.sdxxtop.ui.autotext.AutoTextView
                android:id="@+id/atv_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second_floor"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_report"
                android:text="事件上报"
                android:onClick="@{click::onClick}"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/btn_report_gradient_6"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:layout_height="64dp" />

            <Button
                android:id="@+id/btn_self_handle"
                android:text="自行处理"
                android:onClick="@{click::onClick}"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/btn_selfhandle_gradient_6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="64dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            app:layout_constraintTop_toBottomOf="@id/ll_second_floor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>