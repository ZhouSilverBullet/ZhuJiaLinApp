<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.sdxxtop.zjlguardian.ui.mine.viewmodel.MineViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/mine_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sdxxtop.ui.TitleView
            android:id="@+id/stv_title"
            app:titleValue="个人中心"
            app:titleColor="@color/white"
            app:bgColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.home.fragment.TestFragment">

                <com.sdxxtop.ui.TextContentView
                    app:tcv_text_view="手机号："
                    app:tcv_content_text="18212341963"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextContentView
                    app:tcv_text_view="姓\t\t\t名："
                    app:tcv_content_text="王凯"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextContentView
                    app:tcv_text_view="所属单位："
                    app:tcv_content_text="扶贫办"
                    app:tcv_line_is_show="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事件处理"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="16dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_B2B2B2" />

                <com.sdxxtop.ui.TextAndTextView
                    android:onClick="@{vm::skipReportList}"
                    app:tatv_line_is_show="true"
                    app:tatv_text_view="我的上报事件"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextAndTextView
                    app:tatv_line_is_show="true"
                    app:tatv_text_view="我的自行处理"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextAndTextView
                    app:tatv_line_is_show="true"
                    app:tatv_text_view="部门事件"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextAndTextView
                    app:tatv_line_is_show="false"
                    app:tatv_text_view="我的待办事项"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <com.sdxxtop.ui.TextAndTextView
                    app:tatv_line_is_show="true"
                    app:tatv_text_view="消息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.sdxxtop.ui.TextAndTextView
                    app:tatv_line_is_show="false"
                    app:tatv_text_view="修改密码"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="退出登录"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</layout>