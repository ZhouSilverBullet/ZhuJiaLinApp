<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.sdxxtop.zjlguardian.ui.report.viewmodel.ReportMessageDecViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.fragment.TestFragment">

        <com.sdxxtop.ui.TextContentView
            android:id="@+id/tcv_publisher"
            android:layout_marginTop="@dimen/dp_16"
            app:tcv_text_view="表单发布者："
            app:tcv_content_text="李亮"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sdxxtop.ui.TextContentView
            android:id="@+id/tcv_dec"
            app:tcv_text_view="说明："
            app:tcv_content_text="严格按表单格式采集数据"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sdxxtop.ui.TextContentView
            android:id="@+id/tcv_date"
            app:tcv_text_view="截止日期："
            app:tcv_content_text="2019-8-20"
            app:tcv_line_is_show="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="事件提交"
            android:padding="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/dp_16"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_14"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/sp_14"
                    android:text="今日提交"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="@dimen/dp_16"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_14"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/sp_14"
                    android:text="共提交"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>