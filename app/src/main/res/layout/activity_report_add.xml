<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.report.ReportAddActivity">

        <com.sdxxtop.ui.TitleView
            android:id="@+id/stv_title"
            app:titleValue="新增数据"
            app:titleColor="@color/white"
            app:bgColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sdxxtop.ui.TextAndEditView
            android:id="@+id/taev_name"
            app:layout_constraintTop_toBottomOf="@id/stv_title"
            android:layout_marginTop="16dp"
            app:taev_text_view="姓名："
            app:taev_edit_text_hint="请输入你的姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sdxxtop.ui.TextAndEditView
            android:id="@+id/taev_age"
            app:layout_constraintTop_toBottomOf="@id/taev_name"
            app:taev_text_view="年龄："
            app:taev_edit_text_hint="请输入你的年龄"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sdxxtop.ui.TextAndEditView
            android:id="@+id/taev_date"
            app:layout_constraintTop_toBottomOf="@id/taev_age"
            app:taev_text_view="出生日期："
            app:taev_edit_text_hint="请输入日期年月日"
            app:taev_line_is_show="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_marginTop="10dp"
            android:textSize="@dimen/sp_14"
            android:text="这是最后一条数据"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/taev_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add"
            android:text="提交"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="55dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>