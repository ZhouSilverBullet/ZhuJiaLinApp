<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sdxxtop.zjlguardian">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 安装的时候需要权限问题 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/NoTitleTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:theme">
        <activity android:name=".ui.web.WebActivity"></activity>
        <activity android:name=".ui.department.DepartmentListActivity" />
        <activity android:name=".ui.commission.CommissionDoneActivity" />
        <activity android:name=".ui.message.MessageDetailActivity" />
        <activity android:name=".ui.message.MessageActivity" />
        <activity android:name=".ui.commission.CommissionActivity" />
        <activity android:name=".ui.event_report.EventReportDetailActivity" />
        <activity android:name=".ui.event_report.EventReportListActivity" />
        <activity android:name=".ui.report.ReportMessageActivity" />
        <activity android:name=".ui.report.ReportAddActivity" />
        <activity android:name=".ui.self_handle.SelfHandleActivity" />
        <activity android:name=".ui.event_report.EventReportActivity" />
        <activity android:name=".ui.contact.ContactSearchActivity" />
        <activity
            android:name=".ui.home.MainTabActivity"
            android:theme="@style/MainTabNoTitleTheme" />
        <activity
            android:name=".ui.login.ForgetActivity"
            android:theme="@style/NoTitleWhiteTheme" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/NoTitleWhiteTheme" />
        <activity android:name=".ui.servicecontract.ServiceContractActivity" />
        <activity android:name=".ui.MainActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.sdxxtop.splash.SplashActivity"
            android:theme="@style/NormalSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.map.AmapPoiActivity" />
        <activity android:name=".push.PushCenterActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider> <!-- 阿里云推送 start -->

        <activity
            android:name="com.sdxxtop.zhidian.alipush.PopupPushActivity"
            android:exported="true"
            android:theme="@style/NormalSplash" />
        <meta-data
            android:name="com.alibaba.app.appkey"
            android:value="28080433" />
        <meta-data
            android:name="com.alibaba.app.appsecret"
            android:value="cfad88ced6ddc21f9cdf8b652ead85c3" />

        <receiver
            android:name=".push.AliMessageReceiver"
            android:exported="false"> <!-- 为保证receiver安全，建议设置不可导出，如需对其他应用开放可通过android：permission进行限制 -->
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_OPENED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_REMOVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.sdk.android.push.RECEIVE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>